#include<stdio.h>
int main()
{
char inputstring[100];
int uppercount,lowercount,digits,i;
printf("enter a string");
gets(inputstring);
printf("input srting is %s",inputstring);
uppercount = lowercount = digits = 0;
for(i=0;inputstring[i]!='0';i++)
{
}
if(inputstring[i] >='A' && inputstring[i] <='Z')
{
uppercount++;
}
else if(inputstring[i] >='a' && inputstring[i] <='z')
{
lowercount++;
}
else if(inputstring[i]>='0' && inputstring[i]<='9')
{
	digits++;
}
printf("\nuppercase count:%d\n",uppercount);
printf("\nlowercase count:%d\n",lowercount);
printf("\ndigits in count:%d\n",digits);
return 0;
}
