#include<stdio.h>
float interest(int p,int n)
{
	char ch[1];
	printf("Are you a senior citizn(y/n):");
	scanf("%s",&ch);
	float SI,r,N,P;
	if(strcmp("y",ch)==0){
		r=12;
	}
	else if (strcmp("n",ch)==0){
	r=10;
	}
 SI = P*r*N/100.0;
	return SI;
}
main()
{
	int p,n;
	float r,z;
	printf("enter principal amount:");
	scanf("%d",&p);
	if(p>0&&n>0){
		z=interest(p,n);
		printf("\nsimple interest:5.2f\n",z);
	}
	else{
	printf("invalid input");
	}
}
